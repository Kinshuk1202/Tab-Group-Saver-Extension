{
    "manifest_version": 3,
    "name": "Tab Group Saver",
    "version": "1.0",
    "description": "Save and restore groups of tabs by name.",
    "permissions": ["tabs", "storage"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }